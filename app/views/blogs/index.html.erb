<p id="notice"><%= notice %></p>












<% if user_signed_in? %>
  



  <% @blogs.each do |blog| %>
  <div class="well">
    <div id = "main_content" class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-xs-4 col-sm-2">
            <div class="text-right">
                <h2><%= image_tag blog.avatar.url(:thumb) %></h2>
          </div>
          </div>
          <div class="col-xs-8 col-sm-10">
              <h2>
               <%= link_to blog.title, blog %><br>
               <small class "author">Submitted <%= time_ago_in_words(blog.created_at) %> by <%= blog.user.name %></small>
              </h2>
          </div>
        </div>
      </div>
    </div>
 </div>

  <% end %>
  
<% else %>

<div class="container">
  <div class="jumbotron">

    <center><h1>Welcome To BlogToday</h1></center>
    <center> <p>This is a brand new Blog that will help you retain your thoughts</p> </center>
    <center>
      <a href="/users/sign_in" role="button" class="btn btn-primary">Sign In</a>
      <a href="/users/sign_up" role="button" class="btn btn-primary">Sign Up</a>
  
    </center>

    
   
   
<% end %>




